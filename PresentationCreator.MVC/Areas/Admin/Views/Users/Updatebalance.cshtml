@using PresentationCreatorAPI.Application.DTOs.UserDtos

@model UpdateUserBalanceDto
@{
    ViewData["Title"] = "UpdateBalance";
}

<div class="content mt-4">
    <h3>UpdateBalance</h3>
    <div class="col-sm-12 col-xl-6">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Update User Balance</h6>
            <form asp-area="admin" asp-controller="users" asp-action="updatebalance">
                <div class="row mb-3">
                    <label  class="col-sm-2 col-form-label">ID</label>
                    <div class="col-sm-10">
                        <input asp-for ="Id" type="number" class="form-control" id="inputEmail3">
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Phone Number</label>
                    <div class="col-sm-10">
                            <input asp-for="PhoneNumber" type="tel" class="form-control" id="inputEmail3">
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Summa</label>
                    <div class="col-sm-10">
                        <input asp-for="Balance" type="number" class="form-control" id="inputPassword3">
                        <span asp-validation-for="Balance" class="text-danger"></span>
                    </div>
                </div>
                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Is Add</legend>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input asp-for="IsAdd" class="form-check-input" type="radio" name="IsAdd" id="gridRadios1" value="true" checked>
                            <label class="form-check-label" for="gridRadios1">
                                Add
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="IsAdd" class="form-check-input" type="radio" name="IsAdd" id="gridRadios2" value="false">
                            <label class="form-check-label" for="gridRadios2">
                                Minus
                            </label>
                        </div>
                    </div>
                </fieldset>
                <button type="submit" class="btn btn-primary">Update Balance</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Payments chart
        document.addEventListener('DOMContentLoaded', function () {
            fetch('@Url.Action("SingleLineChart", "Users", new { area = "Admin" })')
                .then(response => response.json())
                .then(data => {
                    var labels = [];
                    var paymentSums = [];

                    data.forEach(item => {
                        var date = new Date(item.date);
                        var options = { day: 'numeric', month: 'long' }; // kun va oy nomini olish uchun parametrlar
                        labels.push(date.toLocaleDateString('uz-UZ', options));
                        paymentSums.push(item.sum);
                    });

                    // Reverse the labels and paymentSums arrays to display them in the desired order
                    labels.reverse();
                    paymentSums.reverse();

                    var ctx3 = document.getElementById("line-chart").getContext("2d");
                    var myChart3 = new Chart(ctx3, {
                        type: "line",
                        data: {
                            labels: labels,
                            datasets: [{
                                label: "Payments",
                                fill: false,
                                backgroundColor: "rgba(235, 22, 22, .7)", // nuqtalarning rangi
                                borderColor: "rgba(0, 0, 0, .7)", // chiziqning rangi
                                data: paymentSums,
                                borderWidth: 3, // chiziqning qalinligi
                                pointBackgroundColor: "rgba(235, 22, 22, .7)", // nuqtalarning rangi
                                pointBorderColor: "rgba(235, 22, 22, .7)" // nuqtalarning chegarasi rangi
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                x: {
                                    grid: {
                                        color: "rgba(0, 0, 0, .7)" // katak to'r rangi
                                    }
                                },
                                y: {
                                    grid: {
                                        color: "rgba(0, 0, 0, .7)" // katak to'r rangi
                                    }
                                }
                            }
                        }
                    });
                })
                .catch(error => console.error('Error fetching payment data:', error));
        });


        // Taqdimotlar by Language
        document.addEventListener('DOMContentLoaded', function () {
            fetch('@Url.Action("PresentationsChart", "Users", new { area = "Admin" })')
                .then(response => response.json())
                .then(data => {
                    var labels = [];
                    var dataValues = [];

                    data.forEach(item => {
                        labels.push(item.language);
                        dataValues.push(item.count);
                    });

                    var ctx5 = document.getElementById("pie-chart").getContext("2d");
                    var myChart5 = new Chart(ctx5, {
                        type: "pie",
                        data: {
                            labels: labels,
                            datasets: [{
                                backgroundColor: [
                                    "rgba(235, 22, 22, .7)",
                                    "rgba(235, 22, 22, .6)",
                                    "rgba(235, 22, 22, .5)",
                                    "rgba(235, 22, 22, .4)",
                                    "rgba(235, 22, 22, .3)"
                                ],
                                data: dataValues
                            }]
                        },
                        options: {
                            responsive: true
                        }
                    });
                })
                .catch(error => console.error('Error fetching presentations data:', error));
        });
    </script>
